{% extends 'dashboard.twig' %}

{% block contentTitle %}
Client Report: {{ client.name }}
{% endblock %}

{% block content %}
<div class="row">

    <div class="col">
        <form method="GET" action="/dashboard#report" class="mb-3 g-3">
            <div class="col-md-5">
                <label for="range" class="form-label">Range</label>
                <select class="form-select" name="range" id="range">
                    <option value="all">All</option>
                    <option value="today">Today</option>
                    <option value="week">This Week</option>
                    <option value="month">This Month</option>
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button class="btn btn-outline-primary w-100" type="submit">Apply</button>
            </div>
        </form>
    </div>

    <div class="col-4">
        <form method="POST" action="/movements/create" class="mb-3 g-3">
            <div class=" d-flex align-items-end">
                <button class="btn btn-outline-primary w-100" type="submit">Add Movement</button>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <h5>Balance</h5>
    <p class="fs-4 fw-bold text-success">€ {{ client.balance|default('0.00') }}</p>
</div>

<div class="row">
    <h5>Movements</h5>
    <ul class="list-group">
        {% for movement in movements %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
            {% if movement.type == 'deposit' %}
                <span class="badge bg-warning">{{ movement.type }}</span>
                <span class="badge bg-info">+{{ movement.amount / 100 }} €</span>
            {% elseif movement.type == 'earning' %}
                <span class="badge bg-success">{{ movement.type }}</span>
                <span class="badge bg-info">+{{ movement.amount / 100 }} €</span>
            {% else %}
                <span class="badge bg-danger">{{ movement.type }}</span>
                <span class="badge bg-info">-{{ movement.amount / 100 }} €</span>
            {% endif %}

            </li>
        {% else %}
            <li class="list-group-item">No movements found.</li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
